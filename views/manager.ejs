<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <title>Manager</title>
  <style>
    table {
      margin-top: 50px;
    }
    .head{
      font-size: 30px;
      font-weight: bold;
      color: wheat;
    }


    .navbar {
      padding: 20px;
    }

    body {
      background-color: rgb(19, 17, 17);
    }
    .approve-btn{
      
      margin-bottom: 10px;


    }
    .reject-btn{
      margin-left: 7px;
      
    }
    
  </style>
</head>

<body>

  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Manager Portal</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
          </li>
          <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
      </div>
    </div>
  </nav>
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col"> Employee Id</th>
        <th scope="col"> Name</th>
        <th scope="col"> Days</th>
        <th scope="col"> Type</th>
        <th scope="col"> Status</th>
        <th scope="col">Reason</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>

      <% if(ans.length>0){ %>
        <% for(let i=0;i<ans.length;i++){ %>
          <tr data-id="<%= ans[i].emp_id %>">
            <td>
              <%= ans[i].emp_id %>
            </td>
            <td>
              <%= ans[i].name %>
            </td>
            <td>
              <%= ans[i].noOfDays %>
            </td>
            <td>
              <%= ans[i].type %>
            </td>
            <td>
              <%= ans[i].status %>
            </td>
            <td>
              <%= ans[i].reason %>
            </td>
            <td >
              
              <form class="approve-form" action="/manager/approve" method="POST" >

                <input type="hidden" name="empId" value="<%= ans[i].emp_id %>">
                <button type="submit" class="btn btn-outline-primary btn-dark approve-btn">Approve</button>
              </form>
            
              <form class="reject-form" action="/manager/reject" method="post">
                <input type="hidden" name="empId" value="<%= ans[i].emp_id %>">
                <button type="submit" class="btn btn-outline-danger btn-dark reject-btn">Reject</button>
              </form>
            
            </td>

          </tr>

          <% } %>
            <% }else{ %>
              <h1 class="heading">Oops!..Data not found</h1>
              <% } %>
                </tr>

                <h1 class="head"></h1>
    </tbody>
  </table>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>



  <script>

    let element=document.querySelector("form .approve-form");

    element[i].addEventListener('submit',function(event){

        document.querySelector(".head").innerHTML="Thank you for approving";
    });
    let element2=document.querySelector("form .reject-form");
    element2.addEventListener('submit',(event)=>{
      document.querySelector(".head").innerHTML="Poor employee!";
    })

    
  </script>

</body>

</html>